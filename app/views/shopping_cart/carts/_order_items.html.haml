%table.table.table-hover
  %tr.no-hover
    %th.col-pic.pl-0
      %span.in-grey-600 Product
    %th.col-title
    %th.col-price
      %span.in-grey-600 Price
    %th.col-quantity
      %span.in-grey-600 Quantity
    %th.col-total
      %span.in-grey-600 SubTotal
    %th.col-close
  - @order.order_items.each do |order_item|
    %tr
      %td
        .general-img-wrap-table
          = link_to main_app.book_path(order_item.product) do
            = image_tag(order_item.product.cover, class: "cart-img-shadow pull-left", alt: "design-book")
      %td
        = link_to main_app.book_path(order_item.product), class: 'title-link' do
          %p.title= order_item.product.title
      %td
        %span.font-16.in-gold-500= number_to_euro order_item.product.price
      %td
        = render 'shopping_cart/carts/quantity', order_item: order_item
      %td
        %span.font-16.in-gold-500= number_to_euro order_item.total 
      %td
        = button_to order_item, method: :delete, class: 'close general-cart-close' do
          %span{'aria-hidden': "true"} &times;
